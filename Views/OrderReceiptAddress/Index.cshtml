
@model IEnumerable<OnlineStore.Models.OrderReceiptAddress>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of addresses</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="OrderReceiptAddress" asp-action="Create" class="btn btn-primary">
                Create New Address
                </a>
            </div>
        </div>

        <br/> <br/>
        @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                City
                            </th>
                            <th>
                                District
                            </th>
                            <th>
                                Street
                            </th>
                            <th>
                                Number House
                            </th>
                            <th>
                                Phone
                            </th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                        <tr>
                            <td width="50">@obj.City</td>
                            <td width="50">@obj.District</td>
                            <td width="50">@obj.Street</td>
                            <td width="50">@obj.NumberHouse</td>
                            <td width="50">@obj.Phone</td>                            
                        </tr>
                        }
                    </tbody>
                </table> 
            }
            else
            {
                <p>No adresses exists.</p>
            }
    </div>