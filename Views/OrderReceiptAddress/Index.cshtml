
@model IEnumerable<OnlineStore.Models.OrderReceiptAddress>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">List of addresses</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-controller="OrderReceiptAddress" asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> &nbsp; Create New Address
                </a>
            </div>
        </div>

        <br/><br/>
        @if(Model.Count() > 0)
            {
                <table class="table table-bordered table-striped" style="width : 100%">
                    <thead>
                        <tr>
                            <th>
                                City
                            </th>
                            <th>
                                District
                            </th>
                            <th>
                                Street
                            </th>
                            <th>
                                Number House
                            </th>
                            <th>
                                Phone
                            </th>
                            <ht> </ht>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                        {
                        <tr>
                            <td width="16%">@obj.City</td>
                            <td width="16%">@obj.District</td>
                            <td width="16%">@obj.Street</td>
                            <td width="16%">@obj.NumberHouse</td>
                            <td width="16%">@obj.Phone</td>
                            <td class="text-center">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-controller="OrderReceiptAddress" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-1"><i class="fas fa-edit"></i>                              
                                    </a>
                                    <a asp-controller="OrderReceiptAddress" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-1"><i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table> 
            }
            else
            {
                <p>No adresses exists.</p>
            }
    </div>