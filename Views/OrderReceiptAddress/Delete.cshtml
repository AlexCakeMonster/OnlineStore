@model OnlineStore.Models.OrderReceiptAddress

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete address</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="City"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="City" disabled class="form-control" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="District"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="District" disabled class="form-control" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Street"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Street" disabled class="form-control" />                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NumberHouse"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NumberHouse" disabled class="form-control" />                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Phone" disabled class="form-control" />                       
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i>Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
